{% spaceless %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ config.siteTitle }}{% endblock %}</title>
        <meta name="author" content="{{ config.siteOwner }}">
        <link rel="stylesheet" href="{{ config.mainUrl }}/modules/main/templates/default/ss/normalize.css">
        <link rel="stylesheet" href="{{ config.mainUrl }}/modules/main/templates/default/ss/bolido.css">
        <script type="text/javascript" src="{{ config.mainUrl }}/modules/main/templates/default/js/jquery-1.8.3.min.js"></script>
        <script type="text/javascript" src="{{ config.mainUrl }}/modules/main/templates/default/js/Bolido.js"></script>
        <script type="text/javascript">var mainUrl = '{{ config.mainUrl }}'; var moduleTemplateUrl = '{{ templateUrl }}'; var currentModuleUrl = '{{ moduleUrl }}';</script>
        <link rel="canonical" href="{{ canonical }}">
        {% for linkLang in config.allowedLanguages %}
            <link rel="alternate" href="{{ config.mainUrl }}/?locale={{ linkLang }}" hreflang="{{ linkLang }}">
        {% endfor %}
        {% block head %}{% endblock %}
        {{ moduleAssets|raw }}
    </head>
    <body>
        <div id="bolido-javascript-check">{{ 'error_enable_javascript'|lang }}</div>
        <div id="bolido-cookie-check" style="display:none;">{{ 'error_enable_cookies'|lang }}</div>
        <script type="text/javascript"> document.getElementById('bolido-javascript-check').style.display = 'none'; var bolidoCookieEnabled = (document.cookie.indexOf('{{ session.name }}') != -1); if (!bolidoCookieEnabled) { document.getElementById('bolido-cookie-check').style.display = 'block'; }</script>
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
    </body>
</html>
{% endspaceless %}

{% if developmentMode %}
<!-- Development Mode On! -->
{% endif %}
